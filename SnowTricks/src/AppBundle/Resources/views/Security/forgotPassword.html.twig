{% extends "::layout.html.twig" %}

{% block sections_body %}

<!-- Page Content -->
<div class="container login-page">

    <div class="row login-title">
        <div class="home_text">
            <h1 class="text-blue animation">Mot de passe oubli√©</h1>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }} animation">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div><!--End off row-->

    <div class="row page-wrapper-register">

        {{ form_start(formForgotPassword) }}

        <div class="register-user">
            {{ form_row(formForgotPassword.email) }}
        </div>

        <div class="register-submit">
            <input type="submit" class="btn-login" value="Demander un nouveau mot de passe" />
        </div>

         {{ form_end(formForgotPassword) }}

     </div>
     
</div>

{% endblock %}
